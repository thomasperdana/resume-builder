{
  "name": "integrated-mono-repo",
  "private": true,
  "version": "1.0.0",
  "description": "Integrated mono repo combining saas-starter, heroui, motion, and erpnext features",
  "author": "Thomas Rudito Perdana <Umbrella@app.cashinblue.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomasperdana/starter.git"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "turbo build --filter='!@heroui/docs' --filter='!@heroui/storybook' --filter='!@heroui/stories-utils' --filter='!@heroui/test-utils' && next build",
    "start": "next start",
    "db:setup": "npx tsx lib/db/setup.ts",
    "db:seed": "npx tsx lib/db/seed.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "dev:heroui": "turbo dev --filter=@heroui/storybook",
    "build:heroui": "turbo build --filter=@heroui/system",
    "dev:motion": "turbo run dev --filter=motion-*",
    "build:motion": "turbo run build --filter=motion-*",
    "test": "jest --verbose --config ./jest.config.js",
    "test:motion": "turbo run test --filter=motion-*",
    "typecheck": "turbo typecheck",
    "lint": "eslint --max-warnings=0",
    "lint:fix": "eslint --fix",
    "format:check": "prettier --check . --cache",
    "format:write": "prettier --write . --cache",
    "clean": "turbo clean && rimraf ./node_modules/.cache/turbo",
    "clean:node-modules": "rimraf ./apps/**/node_modules && rimraf ./packages/**/**/node_modules && rimraf ./node_modules",
    "postinstall": "turbo build --filter=@heroui/theme"
  },
  "dependencies": {
    "@tailwindcss/postcss": "4.1.7",
    "@types/node": "^22.15.18",
    "@types/react": "19.1.4",
    "@types/react-dom": "19.1.5",
    "autoprefixer": "^10.4.21",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.31.1",
    "drizzle-orm": "^0.43.1",
    "jose": "^6.0.11",
    "lucide-react": "^0.511.0",
    "next": "15.4.0-canary.47",
    "postcss": "^8.5.3",
    "postgres": "^3.4.5",
    "@heroui/react": "^2.8.2",
    "framer-motion": "^11.12.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "server-only": "^0.0.1",
    "stripe": "^18.1.0",
    "swr": "^2.3.3",
    "tailwind-merge": "^3.3.0",
    "tailwindcss": "4.1.7",
    "tw-animate-css": "^1.3.0",
    "typescript": "^5.8.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.16.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/cli": "2.27.10",
    "@commitlint/cli": "^17.2.0",
    "@commitlint/config-conventional": "^17.2.0",
    "@eslint/compat": "^1.2.9",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.48.0",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/react": "^8.4.5",
    "@swc/core": "^1.3.35",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "animejs": "^3.2.2",
    "chalk": "^4.1.2",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gsap": "^3.12.5",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lerna": "^4.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^3.0.2",
    "rollup": "4.14.0",
    "tsup": "8.3.5",
    "tsx": "^4.19.2",
    "turbo": "2.4.4",
    "webpack": "^5.53.0"
  },
  "pnpm": {
    "overrides": {
      "react": "19.1.0",
      "react-dom": "19.1.0"
    }
  },
  "engines": {
    "node": ">=22.x",
    "pnpm": ">=10.x"
  },
  "packageManager": "pnpm@10.6.2"
}